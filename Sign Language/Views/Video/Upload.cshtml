@model Sign_Language.Models.VideoUpload

@{
    ViewData["Title"] = "Upload Video";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">Upload Sign Language Video</h2>
            </div>
            <div class="card-body">
                <form asp-action="Upload" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="VideoFile" class="control-label">Select Video File</label>
                        <input asp-for="VideoFile" type="file" class="form-control" accept="video/*" required />
                        <span asp-validation-for="VideoFile" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Upload and Translate</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 